<div class="row border-bottom white-bg dashboard-header">
  <div class="col-sm-12">
    <h2>All Studies</h2>
  </div>
</div>
<div class="row">
<div class="col-lg-12">
<div class="wrapper wrapper-content animated fadeInUp">

  <div class="ibox">
    <div class="ibox-title">
      <h5>Active Studies</h5>
      <div class="ibox-tools">
        <a href="<%= url_for :controller => 'studies', :action => 'new' %>" class="btn btn-primary btn-xs">
          <i class="fa fa-plus"></i> Create Your Own
        </a>
      </div>
    </div>
    <div class="ibox-content">
      <div class="project-list">
        <table class="table table-hover">
          <tbody>
            <% if @studies.present? %>
              <% @studies.each do |study| %>
                <tr>
                  <td class="project-status">
                    <% if study.is_active%>
                      <span class="label label-primary">Active</span>
                    <%end%>
                  </td>
                  <td class="project-title">
                    <a href="<%= url_for :controller => 'studies', :action => 'show', :id => study.id %>"><%= study.name %></a>
                    <br />
                    <small>Created 14.08.2014</small>
                  </td>
                  <td class="project-completion">
                    <small>Completion with: 48%</small>
                    <div class="progress progress-mini">
                      <div style="width: 48%;" class="progress-bar"></div>
                    </div>
                  </td>
                  <td class="project-people">
                    <a href=""><img alt="image" class="img-circle" src="<%= image_path('a3.jpg') %>"></a>
                    <a href=""><img alt="image" class="img-circle" src="<%= image_path('a1.jpg') %>"></a>
                    <a href=""><img alt="image" class="img-circle" src="<%= image_path('a2.jpg') %>"></a>
                    <a href=""><img alt="image" class="img-circle" src="<%= image_path('a4.jpg') %>"></a>
                    <a href=""><img alt="image" class="img-circle" src="<%= image_path('a5.jpg') %>"></a>
                  </td>
                  <td class="project-actions">
                    <a href="<%= url_for :controller => 'studies', :action => 'show', :id => study.id %>" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> View </a>
                    <% if study.user == current_user %><a href="#" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Edit </a><%end%>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <div class="text-center">
                There are currently no active projects.
                <a href="<%= url_for :controller => 'studies', :action => 'new' %>">
                  Create your own?
                </a>
              </div>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
</div>
